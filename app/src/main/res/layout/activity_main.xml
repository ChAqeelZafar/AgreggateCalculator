<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/main_btn_fast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAST" />

            <Button
                android:id="@+id/main_btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NUST" />

            <Button
                android:id="@+id/main_btn_pieas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PIEAS" />

            <Button
                android:id="@+id/main_btn_giki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GIKI" />

            <Button
                android:id="@+id/main_btn_ist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IST" />

            <Button
                android:id="@+id/main_btn_uetLahore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UET LAHORE" />

            <Button
                android:id="@+id/main_btn_uetPeshawar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UET PESHAWAR" />

            <Button
                android:id="@+id/main_btn_uetTaxila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UET TAXILA" />

            <Button
                android:id="@+id/main_btn_comsat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMSATS" />

            <Button
                android:id="@+id/main_btn_qau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QAU" />

            <Button
                android:id="@+id/main_btn_muet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MUET" />

            <Button
                android:id="@+id/main_btn_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CUSTOM" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
